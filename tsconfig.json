{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es7", "es6"],
    "moduleResolution": "node", // Process & infer types from .js files.
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/typings"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", "**/__tests__/**.ts", "src/services"]
}
